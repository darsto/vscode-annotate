{
  "name": "annotate-me",
  "displayName": "annotate-me",
  "description": "Parse custom @annotate comments to colorize any text within a document",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "annotate-me.annotate",
        "title": "Annotate current selection"
      }
    ],
		"colors": [
			{
				"id": "annotate_me.defaultColor0",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#FF000055",
					"light": "#FF000055",
					"highContrast": "#FF000055"
				}
			},
			{
				"id": "annotate_me.defaultColor1",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#00ff0055",
					"light": "#00ff0055",
					"highContrast": "#00ff0055"
				}
			},
			{
				"id": "annotate_me.defaultColor2",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#0066ff55",
					"light": "#0066ff55",
					"highContrast": "#0066ff55"
				}
			},
			{
				"id": "annotate_me.defaultColor3",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#e5ff0055",
					"light": "#e5ff0055",
					"highContrast": "#e5ff0055"
				}
			},
			{
				"id": "annotate_me.defaultColor4",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#00ffbf55",
					"light": "#00ffbf55",
					"highContrast": "#00ffbf55"
				}
			},
			{
				"id": "annotate_me.defaultColor5",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#b700ff55",
					"light": "#b700ff55",
					"highContrast": "#b700ff55"
				}
			},
			{
				"id": "annotate_me.defaultColor6",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#00ffff55",
					"light": "#00ffff55",
					"highContrast": "#00ffff55"
				}
			},
			{
				"id": "annotate_me.defaultColor7",
				"description": "Default background decoration color for the first annotation per line",
				"defaults": {
					"dark": "#ff910055",
					"light": "#ff910055",
					"highContrast": "#ff910055"
				}
			}
		]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "true"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
